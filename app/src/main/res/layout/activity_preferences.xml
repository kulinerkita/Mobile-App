<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial culinary preferences"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color_dark_teal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill in, choose your food type"
        android:textSize="16sp"
        android:textColor="@color/color_teal"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHalal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_selector"
            android:text="Halal"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:checkable="true"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVegan"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_selector"
            android:text="Vegan"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:checkable="true"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpicy"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_selector"
            android:text="Spicy"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:checkable="true"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLocalFood"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/button_selector"
            android:text="Local Food"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:checkable="true"
            app:cornerRadius="20dp" />

    </GridLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:backgroundTint="@color/color_green"
        android:textColor="@color/white"
        android:layout_marginTop="32dp" />
</LinearLayout>
